
<div class="container">
{{> nav }}

<div class="container-fluid">
    <h2 class="mt-3">Near coffee shops</h2>
    <div class="row flex-row flex-nowrap scrolling-wrapper">
        {{#each restaurants as |restaurant|}}
        {{#if restaurant.opening_hours.open_now}}
        <div class="mr-1">
            <form action="/users/main" method="post" class="form">
            <div class="card m-2" style="width: 22rem;">
                <img class="card-img-top" src="https://picsum.photos/500/180/" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"><span class="badge badge-pill badge-warning">{{restaurant.rating}}</span> {{restaurant.name}}</h5>
                    <input class="d-none" type="text" name="restaurantId" value="{{restaurant.id}}"/>
                    <input class="d-none" type="text" name="restaurantName" value="{{restaurant.name}}"/>
                    <input class="d-none" type="text" name="restaurantRating" value="{{restaurant.rating}}"/>
                    <input class="d-none" type="text" name="restaurantVicinity" value="{{restaurant.vicinity}}"/>
                    <input class="d-none" type="text" name="restaurantLocationLat" value="{{restaurant.geometry.location.lat}}"/>
                    <input class="d-none" type="text" name="restaurantLocationLng" value="{{restaurant.geometry.location.lng}}"/>
                    <p class="card-text">{{restaurant.vicinity}}</p>
                    <button type="submit" class="btn btn-primary">Hacer Pedido</button>
                </div>
            </div>
            </form>
        </div>
        {{/if}}
        {{/each}}
    </div>
    <h2 class="mt-3">what do you want</h2>
</div>

<div class="container mx-auto">

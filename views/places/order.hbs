<article id="order-page">
  <div class="container">
    {{> nav }}

    <!-- Jumbotron -->
    <div class="card card-image jumbotronBackground">
      <div class="text-white text-center rgba-stylish-strong py-5 px-4">
        <div class="py-5">

          <!-- Content -->
          <h2 class="card-title h2 my-4 py-2">{{place.name}}</h2>
          <p class="mb-4 pb-2 px-md-5 mx-md-5">{{place.vicinity}}</p>
          <span class="badge badge-pill badge-warning">{{place.rating}}</span>
          {{!-- <div>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star-half"></span>
            <span class=fa-star"></span>
            <span class="fa fa-star"></span>
            <span class="fa fa-star"></span>
          </div> --}}
          {{!-- {{#addStar restaurant}}
          {{/addStar}} --}}
          {{!-- <a class="btn peach-gradient"><i class="fas fa-clone left"></i> View project</a> --}}

        </div>
      </div>
    </div>
    <!-- Jumbotron -->

    <form action="/users/order" method="post" class="form">

      <div class="list-group">
        {{#each place.completeMenu }}
        <li class="list-group-item d-flex justify-content-between align-items-center"> {{this.pref}}<span class="badge badge-primary badge-pill">{{this.price}}</span>
          <select class="custom-select" id="inputGroupSelect01">
            <option value="0"></option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
          </select>
        </li>
        {{/each}}
      </div>

  </div>

  <button type="submit" class="btn btn-primary">Hacer Pedido</button>
  </form>

  <input id="lat" type="text" name="restaurantLocationLat" value="{{place.location.coordinates.[1]}}" />
  <input id="lng" type="text" name="restaurantLocationLng" value="{{place.location.coordinates.[0]}}" />

  {{>map }}

</article>
<div class="container">
  {{> nav }}

  <div class="container-fluid">
    <h2 class="mt-3">Near coffee shops</h2>
    <div class="row flex-row flex-nowrap scrolling-wrapper">
      {{#each restaurants as |restaurant|}}
      {{#if restaurant.opening_hours.open_now}}
      <div class="mr-1">
        <div class="card m-2" style="width: 22rem;">
          <img class="card-img-top" src="https://source.unsplash.com/random/1200x500/?coffee,breakfast" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><span class="badge badge-pill badge-warning">{{restaurant.rating}}</span>
              {{restaurant.name}}</h5>

            <p class="card-text">{{restaurant.vicinity}}</p>
            <a href="/places/{{restaurant.place_id}}" class="btn btn-primary">Ver restaurante</a>
          </div>
        </div>
      </div>
      {{/if}}
      {{/each}}
    </div>
    <h2 class="mt-3">what do you want</h2>
  </div>

  <div class="container mx-auto">
    <div class="row mx-auto">
      <div class="mx-auto col-lg-3">

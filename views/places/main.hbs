<div class="container">
  {{> nav }}
  {{#if favoriteRestaurant}}
  <form action="/orders/{{favoriteRestaurant.id}}/expressOrder" method="post">
    <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark mt-5 main-jumbotron">
      <div class="col-md-6 px-0">
        <h1 class="display-4 font-italic"><span class="badge badge-warning">{{favoriteRestaurant.rating}}</span>
          {{favoriteRestaurant.name}}</h1>
        <p class="lead my-3">{{favoriteRestaurant.vicinity}}</p>
        {{!-- <p class="lead my-3"><i class="fas fa-cookie-bite"></i> Comida</p>
      <p class="lead my-3"><i class="fas fa-mug-hot"></i> Bebida</p> --}}
        {{#each session.fav.menu.orderMenu}}
        <p class="lead my-3"> {{this.units}} <i class="{{clasif-food this.name}}"></i> {{this.name}} <span
            class="badge badge-light">{{this.price}} €</span></p>
        {{/each}}
      </div>
      {{#if session.fav.menu.orderMenu}}
      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary btn-lg">Pedido rápido</button>
      </div>
      {{/if}}
    </div>

  </form>
  {{/if}}

  <div class="container">
    <h2 class="mt-3">Near coffee shops</h2>
    <div class="row flex-row flex-nowrap scrolling-wrapper">
      {{#each restaurants as |restaurant|}}
      {{#if restaurant.opening_hours.open_now}}
      <div class="mr-1">
        <div class="card mr-2" style="width: 22rem;">
          <img class="card-img-top"
            src="https://source.unsplash.com/random/1200x500/?coffee,breakfast&sig={{randomImage}}"
            alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><span class="badge badge-pill badge-warning">{{restaurant.rating}}</span>
              {{restaurant.name}}</h5>

            <p class="card-text">{{restaurant.vicinity}}</p>
            <a href="/places/{{restaurant.place_id}}" class="btn btn-primary">Ver restaurante</a>
          </div>
        </div>
      </div>
      {{/if}}
      {{/each}}
    </div>

  </div>

  <div class="container mx-auto">
    <h2 class="mt-3">what do you want</h2>
    <div class="row mx-auto">
      {{#each preferences}}
      <div class="mx-auto col-lg-3">
        <img class="rounded-circle"
          src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw=="
          alt="Generic placeholder image" width="140" height="140">
        <h2>{{this.name}}</h2>
      </div>
    {{/each}}
    </div>
  </div>

</div>